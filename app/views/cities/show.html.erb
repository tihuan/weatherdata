<div id='show-page'>
  <div id='city-head')>
    <h1><%= @city.name %> Weather in Last 24 Hours</h1>
    <h3><%= @city.name %>, <%= @city.country %></h3>
  </div>

  <%= arrow(@city.id - 1, "left") %>
  <%= arrow(@city.id + 1, "right") %>

  <div id='weather-info'>
    <%= line_chart(@city_temps) %>

    <% @weathers.each_slice(6) do |weather_row| %>
          <%=  render partial: "table", locals: { weathers: weather_row } %>
    <% end %>
  </div>
</div>
