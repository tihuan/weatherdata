var page = $("body");
    page.fadeOut(300, function () {
        page.removeClass().addClass("<%= @city.name.downcase.tr_s(' ', '-') if @city %>");
        page.fadeIn();
    });

$("#show-page").fadeOut(300).fadeIn(0, function() {
  $(this).html("<%= escape_javascript(render 'show', cities: @cities, city: @city ) %>");
});



